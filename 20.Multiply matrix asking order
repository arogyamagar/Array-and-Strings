#include<stdio.h>
int main()
{
	int r1,c1,r2,c2,i,j,k,a[10][10],b[10][10],result[10][10],sum;
  printf("Enter number of rows and columns of first matrix:");
  scanf("%d%d",&r1,&c1);
  printf("Enter number of rows and columns of second matrix:");
  scanf("%d%d",&r2,&c2);
  if(c1!=r2)
  {
  	printf("The matrices can't be multiplied with each other.\n");
  }
  else
  {
  printf("\n\nEnter elements of first matrix:\n");
	for(i=0;i<r1;i++)
	{
		for(j=0;j<c1;j++)
		{
			printf("Enter element of a[%d][%d]: ",i,j);
			scanf("%d",&a[i] [j]);
			
		}
	}
	printf("\n\nEnter element of second matrix:\n");
	 for(i=0;i<r2;i++)
	 {
		for(j=0;j<c2;j++)
		{
			printf("Enter element of b[%d][%d]: ",i,j);
			scanf("%d",&b[i] [j]);
		}
	 }
	 
	
		
		// Multiplying matrices a and b and
    // storing result in result matrix
    for(i=0; i<r1; i++)
    {
		for(j=0; j<c2; j++)
       	{
       		result[i][j]=0;
			for(k=0;k<c1;k++)
       		{
       			result[i][j]+=a[i][k]*b[k][j]; ;
			}
   		}
	}
    // Displaying the result
    printf("\nOutput Matrix:\n");
    for(i=0; i<r1; i++)
    {
		for(j=0; j<c2; j++)
        {
            printf("%d\t", result[i][j]);
        }
        printf("\n");
	}
        
    return 0;

}

}
