 #include <stdio.h>
    void main ()
    {
 
        static int array[10][10];
        int i, j, row, col, sum = 0;
 
        printf("Enter the order of the matrix\n");
        scanf("%d %d", &row, &col);
 
        printf("Enter the coffeicients of the matrix\n");
        for (i = 0; i < row; i++)
        {
            for (j = 0; j < col; j++) 
            {
                scanf("%d", &array[i][j]);
            }
        }
 
       for (i = 0; i < row; i++)
        {
            for (j = 0; j < col; j++)  
            {
                sum = sum + array[i][j] ;
            }
 
            printf("Sum of the %d row is = %d\n", i+1, sum);
            sum = 0;
 
        }
        
        printf("\n");
		  for (j = 0; j < col; j++) 
		  {
        	sum = 0;
            for (i = 0; i < row; i++)
            {
                sum = sum + array[i][j];
            }
 
            printf("Sum of the %d column is = %d\n", j+1, sum);
            sum = 0;
 
        }
 
    }
